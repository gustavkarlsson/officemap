<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

	<changeSet id="1" author="gustav.karlsson@gmail.com">

		<createTable tableName="Sequence">
			<column name="name" type="varchar(64)">
				<constraints primaryKey="true" />
			</column>
			<column name="count" type="bigint">
				<constraints nullable="false" />
			</column>
		</createTable>

		<!-- Event -->

		<createTable tableName="Event">
			<column name="id" type="bigint">
				<constraints primaryKey="true" />
			</column>
			<column name="timestamp" type="bigint">
				<constraints nullable="false" />
			</column>
		</createTable>

		<!-- ItemEvent -->

		<createTable tableName="ItemEvent">
			<column name="id" type="bigint">
				<constraints primaryKey="true" />
			</column>
			<column name="ref" type="int">
				<constraints nullable="false" />
			</column>
		</createTable>

		<addForeignKeyConstraint constraintName="ItemEvent_inherits_Event"
			baseTableName="ItemEvent" baseColumnNames="id" referencedTableName="Event"
			referencedColumnNames="id" />

		<!-- PersonEvent -->

		<createTable tableName="PersonEvent">
			<column name="id" type="bigint">
				<constraints primaryKey="true" />
			</column>
		</createTable>

		<addForeignKeyConstraint constraintName="PersonEvent_inherits_ItemEvent"
			baseTableName="PersonEvent" baseColumnNames="id" referencedTableName="ItemEvent"
			referencedColumnNames="id" />

		<createTable tableName="CreatePersonEvent">
			<column name="id" type="bigint">
				<constraints primaryKey="true" />
			</column>
		</createTable>

		<addForeignKeyConstraint constraintName="CreatePersonEvent_inherits_PersonEvent"
			baseTableName="CreatePersonEvent" baseColumnNames="id"
			referencedTableName="PersonEvent" referencedColumnNames="id" />

		<createTable tableName="DeletePersonEvent">
			<column name="id" type="bigint">
				<constraints primaryKey="true" />
			</column>
		</createTable>

		<addForeignKeyConstraint constraintName="DeletePersonEvent_inherits_PersonEvent"
			baseTableName="DeletePersonEvent" baseColumnNames="id"
			referencedTableName="PersonEvent" referencedColumnNames="id" />

		<!-- UpdatePerson Events -->

		<createTable tableName="UpdatePersonEmailEvent">
			<column name="id" type="bigint">
				<constraints primaryKey="true" />
			</column>
			<column name="email" type="varchar(255)">
				<constraints nullable="false" />
			</column>
		</createTable>

		<addForeignKeyConstraint constraintName="UpdatePersonEmailEvent_inherits_PersonEvent"
			baseTableName="UpdatePersonEmailEvent" baseColumnNames="id"
			referencedTableName="PersonEvent" referencedColumnNames="id" />

		<createTable tableName="UpdatePersonFirstNameEvent">
			<column name="id" type="bigint">
				<constraints primaryKey="true" />
			</column>
			<column name="firstName" type="varchar(255)">
				<constraints nullable="false" />
			</column>
		</createTable>

		<addForeignKeyConstraint
			constraintName="UpdatePersonFirstNameEvent_inherits_PersonEvent"
			baseTableName="UpdatePersonFirstNameEvent" baseColumnNames="id"
			referencedTableName="PersonEvent" referencedColumnNames="id" />

		<createTable tableName="UpdatePersonLastNameEvent">
			<column name="id" type="bigint">
				<constraints primaryKey="true" />
			</column>
			<column name="lastName" type="varchar(255)">
				<constraints nullable="false" />
			</column>
		</createTable>

		<addForeignKeyConstraint constraintName="UpdatePersonLastNameEvent_inherits_PersonEvent"
			baseTableName="UpdatePersonLastNameEvent" baseColumnNames="id"
			referencedTableName="PersonEvent" referencedColumnNames="id" />

		<createTable tableName="UpdatePersonPortraitEvent">
			<column name="id" type="bigint">
				<constraints primaryKey="true" />
			</column>
			<column name="portrait" type="binary(20)"></column>
		</createTable>

		<addForeignKeyConstraint constraintName="UpdatePersonPortraitEvent_inherits_PersonEvent"
			baseTableName="UpdatePersonPortraitEvent" baseColumnNames="id"
			referencedTableName="PersonEvent" referencedColumnNames="id" />

		<createTable tableName="UpdatePersonUsernameEvent">
			<column name="id" type="bigint">
				<constraints primaryKey="true" />
			</column>
			<column name="username" type="varchar(255)">
				<constraints nullable="false" />
			</column>
		</createTable>

		<addForeignKeyConstraint constraintName="UpdatePersonUsernameEvent_inherits_PersonEvent"
			baseTableName="UpdatePersonUsernameEvent" baseColumnNames="id"
			referencedTableName="PersonEvent" referencedColumnNames="id" />

		<createTable tableName="UpdatePersonLocationEvent">
			<column name="id" type="bigint">
				<constraints primaryKey="true" />
			</column>
			<column name="mapRef" type="int"></column>
			<column name="latitude" type="double"></column>
			<column name="longitude" type="double"></column>
		</createTable>

		<addForeignKeyConstraint constraintName="UpdatePersonLocationEvent_inherits_PersonEvent"
			baseTableName="UpdatePersonLocationEvent" baseColumnNames="id"
			referencedTableName="PersonEvent" referencedColumnNames="id" />

		<!-- MapEvent -->

		<createTable tableName="MapEvent">
			<column name="id" type="bigint">
				<constraints primaryKey="true" />
			</column>
		</createTable>

		<addForeignKeyConstraint constraintName="MapEvent_inherits_ItemEvent"
			baseTableName="MapEvent" baseColumnNames="id" referencedTableName="ItemEvent"
			referencedColumnNames="id" />

		<createTable tableName="CreateMapEvent">
			<column name="id" type="bigint">
				<constraints primaryKey="true" />
			</column>
		</createTable>

		<addForeignKeyConstraint constraintName="CreateMapEvent_inherits_MapEvent"
			baseTableName="CreateMapEvent" baseColumnNames="id"
			referencedTableName="MapEvent" referencedColumnNames="id" />

		<createTable tableName="DeleteMapEvent">
			<column name="id" type="bigint">
				<constraints primaryKey="true" />
			</column>
		</createTable>

		<addForeignKeyConstraint constraintName="DeleteMapEvent_inherits_MapEvent"
			baseTableName="DeleteMapEvent" baseColumnNames="id"
			referencedTableName="MapEvent" referencedColumnNames="id" />

		<!-- UpdateMap Events -->

		<createTable tableName="UpdateMapNameEvent">
			<column name="id" type="bigint">
				<constraints primaryKey="true" />
			</column>
			<column name="name" type="varchar(255)">
				<constraints nullable="false" />
			</column>
		</createTable>

		<addForeignKeyConstraint constraintName="UpdateMapNameEvent_inherits_MapEvent"
			baseTableName="UpdateMapNameEvent" baseColumnNames="id"
			referencedTableName="MapEvent" referencedColumnNames="id" />

		<createTable tableName="UpdateMapImageEvent">
			<column name="id" type="bigint">
				<constraints primaryKey="true" />
			</column>
			<column name="image" type="binary(20)">
				<constraints nullable="false" />
			</column>
		</createTable>

		<addForeignKeyConstraint constraintName="UpdateMapImageEvent_inherits_MapEvent"
			baseTableName="UpdateMapImageEvent" baseColumnNames="id"
			referencedTableName="MapEvent" referencedColumnNames="id" />

	</changeSet>
</databaseChangeLog>